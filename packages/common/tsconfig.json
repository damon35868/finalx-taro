{
  "compilerOptions": {
    "module": "ESNext",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "outDir": "./dist",
    "removeComments": false,
    "sourceMap": false,
    "target": "es6"
  },
  "exclude": ["node_modules"],
  "include": [
    "src/",
    "./globals.d.ts"
  ],
  "ts-node": {
    "esm": true
  }
}